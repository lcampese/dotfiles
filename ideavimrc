" Plugins
Plug 'easymotion/vim-easymotion'

" Behavior
set ideajoin

" Mappings
let mapleader = " "

inoremap jj <Esc>
nnoremap <C-H> <C-W>h
nnoremap <C-J> <C-W>j
nnoremap <C-K> <C-W>k
nnoremap <C-L> <C-W>l
nnoremap <Tab> <C-W><C-W>

nmap s <Plug>(easymotion-s)

nmap <Leader>d <Action>(GotoDeclaration)
nmap <Leader>i <Action>(ShowHoverInfo)
nmap <Leader>r <Action>(RenameElement)
nmap <Leader>s <Action>(SelectInProjectView)
